@model List<PortfolioTemplate.Models.Hobilerim>
@{
    Layout = "_AdminLayout";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Hobilerim</h1>
            </div>
        </div>
    </div>
</div>
<div class="card card-primary">
    <form asp-controller="Admin" asp-action="HobilerGuncelle" method="post">
        @foreach (var item in Model)
        {
            <input type="hidden" class="form-control" name="HobilerimId" value="@item.HobilerimId" readonly>
            <div class="card-body">
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea class="form-control" name="Aciklama1" rows="3">@item.Aciklama1</textarea>
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea class="form-control" name="Aciklama2" rows="3">@item.Aciklama2</textarea>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>
        }
    </form>
</div>