@model List<PortfolioTemplate.Models.AppUser>
@{
    Layout = "_AdminLayout";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Kullanıcı Listesi</h1>
            </div>
        </div>
    </div>
</div>
<table class="table table-hover table-bordered table-responsive">
    <tr>
        <th>ID</th>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>E-Posta Adresi</th>
        <th>Password Hash</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.NameSurname</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td>@item.PasswordHash</td>
            <td><a asp-controller="Admin" asp-action="KullaniciSil" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>

<a asp-controller="RegisterUser" asp-action="Index" class="btn btn-primary">Yeni Kullanıcı Ekle</a>