@model IEnumerable<Iletisim>
@{
    Layout = "_AdminLayout";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Gelen Mesaj Listesi</h1>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="timeline">
                    @foreach (var item in Model)
                    {
                        <div class="time-label">
                            <span class="bg-success">@item.Tarih</span>
                        </div>
                        <div>
                            <i class="fas fa-comment bg-blue"></i>
                            <div class="timeline-item">
                                <h3 class="timeline-header">Ad Soyad: @item.AdSoyad -  E-Posta: <a href="mailto:@item.Mail">@item.Mail</a> - Konu: @item.Konu</h3>
                                <div class="timeline-body">
                                    @item.Mesaj
                                </div>
                                <div class="timeline-footer">
                                    <a asp-controller="Admin" asp-action="IletisimSil" asp-route-id="@item.IletisimId" class="btn btn-danger btn-sm">Sil</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>